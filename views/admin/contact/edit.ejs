<%- include("../../partition/header.ejs") %>

<section class="cmspage mtb-40">
    <div class="container">
        <div class="page-desc">
        <div class="row justify-content-center">
          <div class="col-md-8">
              <h1>Edit Contact</h1>
            <form method="post" action="/admin/contact_update/<%= data._id %>">
              <div class="form-group">
                <input type="text" value="<%= data.name %>" name="name" class="form-control" placeholder="Name">
              </div>
              <div class="form-group">
                <input type="text" name="email" value="<%= data.email %>" class="form-control" placeholder="E-Mail">
              </div>
              <div class="form-group">
                <input type="text" name="phone" value="<%= data.phone %>" class="form-control" placeholder="Phone">
              </div>
              <div class="form-group">
                <textarea name="message" rows="5"  class="form-control" placeholder="Message"><%= data.message %></textarea>
              </div>
              <div class="form-group">
                  <button class="btn btn-success">Edit Message</button>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
</section>
